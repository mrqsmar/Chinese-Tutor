{
  "expo": {
    "name": "Chinese Tutor",
    "slug": "chinese-tutor",
    "version": "0.1.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "userInterfaceStyle": "light",
    "ios": {
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We use the microphone to capture speech for translation."
      }
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-audio",
      "expo-video"
    ]
  }
}
